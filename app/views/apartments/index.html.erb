<p id="notice"><%= notice %></p>

<h1>Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Building</th>
      <th>Price_Sale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.number %></td>
        <td><%= apartment.building.name %></td>
        <td><%= apartment.sale_price %></td>
        <td><%= link_to 'Show', building_apartment_path(@building,apartment) %></td>
        <td><%= link_to 'Edit', edit_building_apartment_path(@building,apartment) %></td>
        <td><%= link_to 'Destroy', building_apartment_path(@building,apartment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartment', new_building_apartment_path(@building) %>
